import java.util.*;
import java.lang.*;
import java.io.*;
public class MyClass {
    static int total(int x,int p){
        x=(x*(100-p))/100;
        if(x<1)
        return x;
        else
        return x+total(x,p);
    }
    public static void main(String args[]) {
        Scanner sc=new Scanner(System.in);
        int x=sc.nextInt();
        int p=sc.nextInt();
        MyClass c=new MyClass();
        System.out.println(x+c.total(x,p));
        System.out.println();
    }
}
